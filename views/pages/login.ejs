<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>GitRunning Login</title>
  <link rel="stylesheet" href="login.css">
  <link href="https://fonts.googleapis.com/css?family=Alfa+Slab+One|Fredoka+One|Luckiest+Guy|Pacifico|Shrikhand" rel="stylesheet">
</head>

<body>
  <div class="bodywrapper">

    <div class="welcome">
      <section class="headerwrapper">
        <div>Welcome to</div>
        <div class="gitrunning">GitRunning</div>
      </section>
      <section class="buttonwrapper">
        <div class="signup">
          <h1>Not a member?</h1>
          <h2><a href="/signup">Signup</a></h2>
        </div>
        <div class="login">
          <h1>Already a member?</h1>
          <h2><a href="/login">Login</a></h2>
        </div>
      </section>
      <footer>
        <%- include('../partials/footer'); %>
    </footer>
    </div>

    <form action="/login" method="post">
      <h1>Login</h1>
      <fieldset>
        <label for="username">Username</label>
        <input autocomplete="off" type="text" name="username" placeholder="username">
        <label for="password">Password</label>
        <input autocomplete="off" type="password" name="password" placeholder="password">
        <div class="submit-button">
          <input type="Submit" value="Submit">
        </div>
      </fieldset>
    </form>
  </div>
</body>

</html>