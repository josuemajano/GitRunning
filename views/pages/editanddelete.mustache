<html>

<head>
  <meta charset="utf-8">
  <title>New Run</title>
  <script>href="../../models/post.js"</script>
  <link rel="stylesheet" href="newrun.css">
  <link href="https://fonts.googleapis.com/css?family=Alfa+Slab+One|Fredoka+One|Luckiest+Guy|Pacifico|Shrikhand" rel="stylesheet">
</head>

<body>
  <div class="navbar">
    <span><a href="./profile">Home</a></span><span><a href="./createrun">Create a New Run</a></span><span><span><a href="/">Logout</a></span>
  </div>
  <div class="bodywrapper">
    <form>
      <h1 class="h1">Edit and Delete</h1>
      <fieldset>
        <div class="labelwrap">
            <label contentEditable="true" class="title">Title</label>
          <input contentEditable="true" class="title" type="text" name="title" placeholder="Run Title">My First Run
          <label contentEditable="true" class="start">Date</label>
          <input type="date" id="start" name="date">
          <label contentEditable="true" class="time">Start Time</label>
          <input type="time" id="starttime" name="startTime">
          <label contentEditable="true" class="time">End Time</label>
          <input type="time" id="endtime" name="endTime">
          <label contentEditable="true"class= "runType" for="menu">Run Type</label>
          <select contentEditable="true" name="runType" id="menu">
              <option value="Indoor">Indoor</option>
              <option value="Outdoor">Outdoor</option>
          </select>
          <label class= "menu" contentEditable="true" for="menu">Difficulty</label>
          <select name="difficulty" id="menu">
              <option value="easy">Easy</option>
              <option value="medium">Medium</option>
              <option value="hard">Hard</option>
          </select>
          <textarea class="runbody" contentEditable="true" type="text" name="comments" placeholder="Write your comments here!"></textarea>
        </div>
        <div class="form__submit-button">
          <input type="submit" value="Submit">
        </div>
        <div class="form__submit-button">
          <input type="submit" value="Delete"<a href="./profile"</a>
        </div>
      </fieldset>
    </form>
  </div>
</body>

</html>